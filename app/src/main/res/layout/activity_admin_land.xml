<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/subbg"
    tools:context=".MainActivity">

    <TextView

        android:id="@+id/txt"
        android:background="@color/teal_700"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/ragastaitalic"
        android:text="Manage Information" />

    <Button
        android:id="@+id/IslamA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/Silver"
        android:padding="50dp"
        app:icon="@drawable/pic1"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/ChristianA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/IslamA"
        android:backgroundTint="@color/Silver"
        android:padding="50dp"
        app:icon="@drawable/pic2"
        app:iconTint="@color/black"
        />

    <Button
        android:id="@+id/HinduA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IslamA"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/Silver"
        android:padding="50dp"
        app:icon="@drawable/pic3"
        app:iconTint="@color/black"
        />

    <Button
        android:id="@+id/BuddhistA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IslamA"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/HinduA"
        android:backgroundTint="@color/Silver"
        android:padding="50dp"
        app:icon="@drawable/pic4"
        app:iconTint="@color/black"
        />

    <Button
        android:id="@+id/homebt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HinduA"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        app:icon="@drawable/homebt"
        app:iconTint="@color/black"
        android:backgroundTint="@color/Silver"/>

</RelativeLayout>